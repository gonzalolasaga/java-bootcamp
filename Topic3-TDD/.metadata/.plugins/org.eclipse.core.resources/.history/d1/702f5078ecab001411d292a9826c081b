package practice2;

import java.util.ArrayList;
import java.util.List;

public class WordWrapping {
	String aux="";
	List<String> list = new ArrayList<String>();

	public List<String> Wrap(String s, int size) {
		
		for (int i = 0; i <s.length(); i++) {
			if (aux.length() > size-1) {
				list.add(aux);
				aux="";
			}
			aux += s.charAt(i);
		}
		list.add(aux);
		return list;
	}
}
