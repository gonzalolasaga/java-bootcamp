package practice1;

import static org.junit.Assert.*;

import org.junit.Test;

public class ConverterTest {
		Converter converter =new Converter();

		@Test
		public void number1ToOne(){
			String result=converter.convert(1);
			assertEquals(result, "one");
			}
		
		@Test
		public void unitToString(){
			String result=converter.convert(7);
			assertEquals(result, "seven");
			}

		@Test
		public void numberTo19ToString(){
			String result=converter.convert(19);
			assertEquals(result, "nineteen");
			}
		
		@Test
		public void checkingTheLenght(){
			String result=converter.convert(12345);
			assertEquals(result,"number out of range");
			}
		
		@Test
		public void numberToString(){
			String result=converter.convert(3000);
			assertEquals(result, "three thounsand");
			}
}